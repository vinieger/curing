# syntax=docker/dockerfile:1
FROM golang:1.22-alpine AS builder
WORKDIR /app
ENV CGO_ENABLED=0
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN go build -o /out/client cmd/main.go

FROM alpine:3.20
WORKDIR /app
COPY --from=builder /out/client /app/client
COPY entrypoint-client.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh
ENTRYPOINT ["/entrypoint.sh"]
